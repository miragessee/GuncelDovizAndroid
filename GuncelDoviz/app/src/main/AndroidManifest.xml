<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hakansoftware.gunceldoviz">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:label=""
            android:name=".activity.ListScreenActivity"
            android:theme="@style/ListScreenActivityTheme"/>

        <activity
            android:label=""
            android:name=".activity.LoginScreenActivity"
            android:theme="@style/LoginScreenActivityTheme" />

        <activity
            android:label=""
            android:name=".activity.RegisterScreenActivity"
            android:theme="@style/RegisterScreenActivityTheme"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>